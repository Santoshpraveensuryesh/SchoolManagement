<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_3sdp"
        android:id="@+id/cons_menu_item"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_submenuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_dark"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_3sdp"
            app:layout_constraintTop_toBottomOf="@+id/img_menu_icon"/>

        <ImageView
            android:id="@+id/img_menu_icon"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:visibility="visible"
            android:layout_marginRight="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/txt_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/app_name"
            android:singleLine="true"
            android:lines="1"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@+id/img_menu_icon"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp"
            />
        <ImageView
            android:id="@+id/img_down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:layout_marginRight="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/img_menu_icon"
            />

         </androidx.constraintlayout.widget.ConstraintLayout>
</layout>